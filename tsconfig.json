{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "lib": [ "ES2022", "DOM" ],
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "outDir": "./out",
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": false
    },
    "include": [ "src/*.ts" ],
    "exclude": [ "node_modules" ]
}
